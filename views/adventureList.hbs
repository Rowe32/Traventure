<div class="past-travels-div">
    <h1>new adventures: </h1>
</div>

<div class="ul-travels-container">

<ul>
{{#each adventures }}
<div class="black-travel-box">
    <div class="country-and-year-div">
    <li id="litograpthis"> 
        <div id="country-in-travel-box"> {{ this.country }} </div>
        <div id="year-in-travel-box">{{ this.year }}</div></li>
    </div>
    <div class="btn-travel-box">  
    <button><a href="/private/{{../user.username}}/adventures/{{this._id}}">edit</a></button>
    <form action="/private/{{ ../user.username }}/adventures/delete" method="POST" >
            <input id="debuggingId" style="display:none" type="text" name="id" value="{{ this._id }}">
            <button type="submit">delete</button>
    </form>
    </div>

</div>

{{/each}} 
</ul>

</div>